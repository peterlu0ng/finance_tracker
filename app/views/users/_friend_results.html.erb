<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<% if @friends %>
  <div class="card bg-light mb-3 card-body results-block">
    <table class="col-md-12">
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><strong>Name: </strong> <%= friend.full_name %></td>
            <td><strong>Email: </strong> <%= friend.email %></td>
            <td><strong>Actions: </strong> <%= link_to 'View Profile', user_path(friend), class: "btn btn-sm btn-success" %>
            <% if current_user.not_friends_with?(friend.id) %>
            <%= link_to 'Follow', friendships_path(friend: friend), class: "btn btn-sm btn-success", data: {turbo_method: :post} %>
            <% else %>
              <span class="badge text-bg-secondary">You are already friends</span>
              <% end %>
              </td>
            <% end %>
          </tr>
      </tbody>
    </table>
  </div>
<% end %>